<h1>HOME PAGE</h1>

<div class="mt-4">
    <div class="row mt-4">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-course-item">
            <a href="/courses/{{this.slug}}"> <img src="{{this.img}}" class="card-img-top img-thumbnail" alt="{{this.name}}"></a>
            <div class="card-body">
                <a href="/courses/{{this.slug}}"><h5 class="card-title">{{this.name}}</h5></a>
                <p class="card-text">{{this.description}}</p>
                <a href="#" class="btn btn-primary">Buy course</a>
            </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>